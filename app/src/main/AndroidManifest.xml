<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="live.andiirham.githubuser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="live.andiirham.githubuser.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="live.andiirham.githubuser.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver
            android:name=".view.settings.alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="TODO" />
        <provider
            android:name=".db.provider.FavoriteProvider"
            android:authorities="live.andiirham.githubuser"
            android:enabled="true"
            android:exported="true"
            android:readPermission="live.andiirham.githubuser.READ_DATABASE"
            android:writePermission="live.andiirham.githubuser.WRITE_DATABASE" />

        <activity android:name=".view.settings.SettingsActivity" />
        <activity android:name=".view.favorites.FavoriteActivity" />
        <activity
            android:name=".view.splashscreen.SplashScreenActivity"
            android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.settings.LangActivity" />
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.detail.DetailActivity" />
    </application>

</manifest>